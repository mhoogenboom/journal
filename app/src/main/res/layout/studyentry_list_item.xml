<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/medium_padding">

    <TextView
        android:id="@+id/studyentry_dayofstudy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        style="@style/ListItem.Header" />

    <TextView
        android:id="@+id/studyentry_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studyentry_dayofstudy"
        android:layout_alignParentLeft="true"
        style="@style/ListItem.Field" />

    <TextView
        android:id="@+id/studyentry_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/studyentry_course"
        android:layout_alignParentLeft="true"
        style="@style/ListItem.Field" />

</RelativeLayout>