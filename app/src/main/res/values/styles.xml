<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="namedObjectViewStyle">@style/Widget.NamedObjectView</item>
    </style>

    <style name="Header" parent="android:TextAppearance.DeviceDefault.Large">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Label" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:layout_marginTop">@dimen/large_padding</item>
    </style>

    <style name="ListItem.Header" parent="android:TextAppearance.DeviceDefault.Medium">
        <item name="android:textColor">#999999</item>
    </style>

    <style name="ListItem.Field" parent="android:TextAppearance.DeviceDefault.Medium">
	</style>

    <style name="Widget.NamedObjectView" parent="android:Widget.EditText">
        <item name="android:editable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
